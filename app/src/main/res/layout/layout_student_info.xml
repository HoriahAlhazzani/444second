<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <!--    <TextView-->
        <!--        style="@style/headerTextPrimary"-->
        <!--        android:text="@string/menu_profile"-->
        <!--        android:textColor="@color/colorPrimaryDark"-->
        <!--        android:layout_marginTop="@dimen/loginViewsMargin"/>-->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/pname_signup"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/id"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_credit_card_black_24dp"
                android:hint="@string/login_id_hint"
                android:inputType="number"
                android:maxLength="9"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/pemail_signup"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                android:hint="@string/login_email_hint"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/phone"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:hint="Mobile Number"
                android:maxLength="10"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/locker_no"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_view_agenda_black_24dp"
                android:hint="Locker Number"
                android:maxLength="10"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--        <com.google.android.material.textfield.TextInputLayout-->
        <!--            style="@style/parent"-->
        <!--            android:layout_marginTop="@dimen/signup_text_margin_top">-->

        <!--            <EditText-->
        <!--                android:id="@+id/locker_area"-->
        <!--                style="@style/modifiedEditText"-->
        <!--                android:backgroundTint="@color/colorPrimary"-->
        <!--                android:drawableStart="@drawable/ic_phone_android_black_24dp"-->
        <!--                android:inputType="text"-->
        <!--                android:maxLines="1" />-->
        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/locker_Size"
                style="@style/modifiedEditText"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_view_agenda_black_24dp"
                android:maxLength="10"
                android:hint="Locker Size"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="30dp"/>
        </com.google.android.material.textfield.TextInputLayout>








    </LinearLayout>
</androidx.cardview.widget.CardView>
